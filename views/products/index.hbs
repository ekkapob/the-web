<div id="products">
  <div class="container">
    <div class="row">
      <form id="product-filter-form" action="/products">
        <div class="col-sm-12 products-info">
          <div>Showing
            {{records}}
            {{pluralize records 'product' 'products'}}</div>
        </div>
        <div class="col-md-3 col-lg-3 filter-container">
          {{> filters}}
        </div>
        <div class="col-sm-12 col-md-9 col-lg-9 product-list-container">
          {{#unless products}}
            <div class="no-results">No results found. Please retry with other search options.</div>
          {{/unless}}
          {{> products}}
          {{paginations page pages path query_params}}
        </div>
      </form>
    </div>
  </div>
</div>
