<div id="product-show">
  <div class="container">
    <div class="row">
      {{> product_images}}
      <div class="col-md-5 col-lg-5 info">
        <p class="title">
          <span class="name">{{product.name}}</span>
          <span>
            <span class="id">{{product.product_id}}</span>
          </span>
        </p>
        <div class="category-car">
          <span class="category">
            {{#if product.category}}
              <span class="icon-gear"></span>
              <a href="#">{{product.category}}</a>
            {{/if}}
            {{#if product.subcategory}}
              <span>|</span>
              <a href="#">{{product.subcategory}}</a>
            {{/if}}
          </span>
          {{#if product.car_brand}}
            <span class="car-brand">
              <span class="icon-truck"></span>
              <a href="#">{{product.car_brand}}</a>
            </span>
          {{/if}}
        </div>
        <hr />
        {{#if product.details}}
          <p class="details">{{product.details}}</p>
        {{/if}}
        <blockquote>
          {{#if product.part_no}}
            <p>Part no.:&nbsp;<span>{{product.part_no}}</span></p>
          {{/if}}
          {{#if product.substitute_part_no}}
            <p>Substitute part no.:&nbsp;
            <span>{{product.substitute_part_no}}</span></p>
          {{/if}}
          {{#if product.engine_model}}
            <p>Engine model:&nbsp;<span>{{product.engine_model}}</span></p>
          {{/if}}
        </blockquote>
        {{#if product.remark}}
          <div class="remark">
            <p>Remark:</p>
            <p>{{product.remark}}</p>
          </div>
        {{/if}}
        <div class="order">
          <button class="btn btn-order">
            <span>Order<span class="icon-cart"></span></span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
{{> recommended_products }}
