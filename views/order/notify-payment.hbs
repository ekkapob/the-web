<div id="notify-payment" class="th">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 th-small">
        <h2>{{__ 'payment_notification'}}</h2>
        <form action="/notify_payment" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="orderIdInput">{{__ 'order_id'}}<span class="red">&nbsp;*</span></label>
            <input type="text"
                   name="order_id"
                   class="form-control"
                   id="orderIdInput"
                   placeholder="Order ID" required>
          </div>
          <div class="form-group">
            <label for="fullNameInput">{{__ 'full_name'}}<span class="red">&nbsp;*</span></label>
            <input type="text"
                   name="name"
                   class="form-control"
                   id="fullNameInput"
                   placeholder="Full name" required>
          </div>
          <div class="half-input">
            <div class="form-group">
              <label for="phoneInput">{{__ 'phone'}}<span class="red">&nbsp;*</span></label>
              <input type="text"
                     name="phone"
                     class="form-control"
                     id="phoneInput"
                     placeholder="(66)22249268" required>
            </div>
            <div class="form-group">
              <label for="emailInput">{{__ 'email'}}<span class="red">&nbsp;*</span></label>
              <input type="email" name="email" class="form-control" id="fullNameInput"
                placeholder="Email" required>
            </div>
          </div>
          <div class="form-group">
            <label for="fileInput">{{__ 'upload_transfer_slip'}}<span class="red">&nbsp;*</span></label>
            <input type="file" name="slip_image" id="orderIdInput"
              accept="image/*" required>
          </div>
          <div class="form-group">
            <label for="RemarkInput">{{__ 'remarks'}}</label>
            <textarea id="RemarkInput" name="remarks" class="form-control"
              rows="3" placeholder="Remarks"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">{{__ 'notify_payment' }}</button>
        </form>
      </div>
    </div>
  </div>
</div>
