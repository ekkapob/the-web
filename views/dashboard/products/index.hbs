<div class="products content container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h2>Products</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right">
      <div>Total: {{all_records}} {{pluralize all_records 'product' 'products'}}</div>
    </div>
  </div>
  <div class="row control">
    <div class="col-md-6">
      <a class="btn btn-primary" href="/dashboard/products/new">New Product</a>
    </div>
    <div class="col-md-6 text-right">
      <form action="/dashboard/products/search" method="GET">
        <div class="input-group">
          <input type="text"
                 class="form-control" placeholder="Enter keywords to search"
                 name="query"
                 value="{{query_params.query}}" autofocus>
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit">Search</button>
          </span>
        </div>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed">
          <thead>
            <tr>
              <th>Product ID</th>
              <th>Part No.</th>
              <th>Engine Model</th>
              <th>Name</th>
              <th>Brand</th>
              <th>Category</th>
              <th>Subcategory</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
              <tr id="product-{{product_id}}">
                <td><a href="/dashboard/products/{{product_id}}">{{product_id}}</a></td>
                <td>{{part_no}}</td>
                <td>{{engine_model}}</td>
                <td>{{name}}</td>
                <td>{{car_name}}</td>
                <td>{{category}}</td>
                <td>{{subcategory}}</td>
                <td>
                  <ul class="flat-list">
                    <li><a class="btn btn-info btn-sm" href="/dashboard/products/{{product_id}}">Edit</a></li>
                    <li><a class="btn btn-danger btn-sm product-delete-btn"
                      data-product-id="{{product_id}}" href="#">Delete</a></li>
                  </ul>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        {{#if not_found}}
          <div class="no-records">
            <div>No records found</div>
            <a href="/dashboard/products">Back to All Products</a>
          </div>
        {{/if}}

        <div class="row">
          <div class="col-md-12">
            {{paginations page pages path query_params}}
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
