<div id="home-products">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 section-title th th-big">{{__ 'our_products'}}</div>
    </div>
  </div>

  <div class="product-container bg-blue">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="category th th-big">{{__ 'coolant_water_pump'}}</div>
        </div>
        {{#each coolantPumpAssyProducts}}
          <div class="col-sm-4 product">
            <a href="/products/{{id}}">
            <img src="{{imgSrc primary_image id category subcategory}}"
                 alt="{{id}}">
            </a>
            <div class="details">
              <a href="/products/{{id}}">
                <div class="header text-ellipsis">{{name}}</div>
              </a>
              <div class="info text-ellipsis">{{details}}</div>
              <div class="part-details">
                <div>
                  <span>
                    <span class="th th-small">{{../__ 'part_no'}}:</span>
                    <span class="strong">{{part_no}}</span>
                  </span>
                  <span class="icon-truck"></span>
                  <a href="/products?car_brands={{car_brand}}">
                    <span>{{car_brand}}</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="text-center">
    <a class="btn th" href="/products">{{__ 'see_all_products'}}</a>
  </div>
</div>
