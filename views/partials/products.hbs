<div class="product-list">
  {{#each products}}
  <div class="col-sm-6 col-md-4 col-lg-4 product-container">
    <div class="product">
      <div class="id-car">
        <a href="/products/{{product_id}}">
          <span class="id">{{product_id}}</span>
        </a>
        <a href="#">
          <span class="car">{{car_name}}</span>
        </a>
      </div>
      <div class="image">
        <a href="/products/{{product_id}}">
          <img src="{{imgSrc primary_image product_id category subcategory}}"
               alt="{{product_id}}">
        </a>
        <!-- <div class="order&#45;mask"> -->
        <!--   <button class="btn btn&#45;order"> -->
        <!--     <span>Order</span> -->
        <!--     <img src="/assets/images/cart&#45;white.png"/> -->
        <!--   </button> -->
        <!-- </div> -->
      </div>
      <div class="info">
        <a href="/products/{{product_id}}">
          {{#if ../inputLang}}
            <div class="name th text-ellipsis">{{name_th}}</div>
          {{else}}
            <div class="name text-ellipsis">{{name}}</div>
          {{/if}}
        </a>
        {{#if ../inputLang}}
          <div class="th">{{subcategory_th}}</div>
        {{else}}
          <div class="th">{{subcategory}}</div>
        {{/if}}
        <div class="part-info">
          {{#if part_no}}
            <div class="text-ellipsis">
              <span class="th th-small">{{../__ 'part_no'}}:&nbsp;</span>
              <span class="number">{{part_no}}</span>
            </div>
          {{/if}}
          {{#if engine_model}}
            <div class="text-ellipsis">
              <span class="th th-small">{{../__ 'engine_model'}}:&nbsp;</span>
              <span class="number">{{engine_model}}</span>
            </div>
          {{/if}}
          {{#if ../inputLang}}
            {{#if details_th}}
              <div class="th th-small details text-ellipsis">{{details_th}}</div>
            {{/if}}
          {{else}}
            {{#if details}}
              <div class="details text-ellipsis">{{details}}</div>
            {{/if}}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
